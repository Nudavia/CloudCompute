<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>VMServlet</servlet-name>
        <servlet-class>controller.VMServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VMServlet</servlet-name>
        <url-pattern>/VMServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CTServlet</servlet-name>
        <servlet-class>controller.CTServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CTServlet</servlet-name>
        <url-pattern>/CTServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>controller.ImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/ImageServlet</url-pattern>
    </servlet-mapping>
</web-app>